#!/usr/bin/env zsh

set -eu -o pipefail

function in_rebase {
    [[ -d "$(git rev-parse --git-path rebase-merge)" ]]
}

function has_untracked_files {
    [[ -n "$(git ls-files -m -o --exclude-standard "$(git rev-parse --show-toplevel)")" ]]
}

function git_r {
    if ! in_rebase && has_untracked_files; then
        print 'Saving work...'
        git wip
    fi

    exec git bb-rebase "$@"
}

git_r "$@"
