#!/usr/bin/env zsh

set -eu -o pipefail

function git_bb_log {
    local args=()
    local flags=()
    for arg in "$@"; do
        case $arg in
            (-*) flags+=$arg ;;
            (*) args+=$arg ;;
        esac
    done

    if [[ ${#args} -gt 1 ]]; then
        echo 'Cannot pass multiple arguments to git-bb-log' >&2
        return 1
    fi

    local target=${args[1]:-HEAD}

    local start=HEAD~10

    local base="$(git bb --base ${args[1]:-})"
    if [[ -n $base ]]; then
        start="$(git merge-base $base $target)"
    fi

    local range="${start}^..${target}"
    if ! git show "${start}^" &> /dev/null; then
        range=--root
    fi

    exec git log --first-parent $flags $range
}

git_bb_log "$@"
