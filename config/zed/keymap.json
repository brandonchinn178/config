// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "cmd-m": null,
      "ctrl-q": "workspace::CloseWindow",
      "cmd-shift-w": [
        "pane::CloseAllItems",
        {
          "close_pinned": false
        }
      ],
      "cmd-shift-o": [
        "projects::OpenRecent",
        {
          "create_new_window": true
        }
      ],
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem",
      "alt-tab": "tab_switcher::Toggle",
      "cmd-k cmd-j": "workspace::ActivateNextPane",
      // Toggle docks
      "ctrl-p": "project_panel::ToggleFocus",
      "ctrl-shift-p": "workspace::ToggleLeftDock",
      "ctrl-l": "terminal_panel::ToggleFocus",
      "ctrl-shift-l": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-r": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-;": null,
      "cmd-k cmd-/": "editor::ToggleSelectedDiffHunks",
      "ctrl-backspace": "editor::DeleteToPreviousSubwordStart",
      "ctrl-d": [
        "editor::GoToDiagnostic",
        {
          "severity": {
            "min": "hint",
            "max": "error"
          }
        }
      ],
      "ctrl-shift-d": [
        "editor::GoToPreviousDiagnostic",
        {
          "severity": {
            "min": "hint",
            "max": "error"
          }
        }
      ],
      "ctrl-down": [
        "editor::AddSelectionBelow",
        {
          "skip_soft_wrap": false
        }
      ],
      "ctrl-up": [
        "editor::AddSelectionAbove",
        {
          "skip_soft_wrap": false
        }
      ]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-k": null,
      "cmd-shift-k": "terminal::Clear",
      "cmd-t": "workspace::NewTerminal",
      "ctrl-backspace": null,
      "cmd-shift-up": "terminal::ScrollToTop",
      "alt-shift-down": "terminal::ScrollToBottom"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-c": "search::ToggleCaseSensitive",
      "alt-x": "search::ToggleRegex",
      "alt-f": "project_search::ToggleFilters",
      "alt-w": "search::ToggleWholeWord",
      "alt-r": "search::ToggleReplace"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "alt-n": "project_panel::NewDirectory",
      "ctrl-.": "project_panel::SelectParent",
      "ctrl-d": "project_panel::SelectNextDirectory",
      "ctrl-shift-d": "project_panel::SelectPrevDirectory"
    }
  },
]
