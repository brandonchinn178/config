[user]
name = Brandon Chinn
email = brandon@leapyear.io

[rebase]
autoSquash = true
missingCommitsCheck = error
abbreviateCommands = true

[push]
default = current

[alias]
fixup = commit --fixup
squash = commit --amend --no-edit
touch = commit --amend -C HEAD --date now --no-verify --allow-empty
unstage = reset HEAD
l = log --oneline -10
s = status -sb
c = checkout
p = push --force-with-lease
pd = !git pull && git bd
rc = rebase --continue
cp = cherry-pick

[merge]
conflictstyle = diff3
