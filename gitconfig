[user]
name = Brandon Chinn
email = brandonchinn178@gmail.com

[rebase]
autoSquash = true
missingCommitsCheck = error
abbreviateCommands = true

[push]
default = current

[alias]
fixup = commit --fixup
squash = commit --amend --no-edit
touch = commit --amend -C HEAD --date now --no-verify --allow-empty
unstage = reset HEAD
l = log --oneline -10
ll = log --oneline -20
s = status -sb
c = checkout
p = push --force-with-lease
pd = !git pull && git bd
rc = rebase --continue
cp = cherry-pick
wdiff = diff --color-words=.

[merge]
conflictstyle = diff3
