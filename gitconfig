[user]
name = Brandon Chinn
email = brandon@leapyear.io

[rebase]
autoSquash = true
missingCommitsCheck = error
abbreviateCommands = true

[push]
default = current

[alias]
fixup = commit --fixup
squash = commit --amend --no-edit
touch = commit --amend -C HEAD --date now --no-verify --allow-empty
l = bb-log --oneline
ll = log --oneline
s = status -sb
c = checkout
mb = bb-make-branch
b = mb --checkout
cb = mb --reset
mvb = bb-rename-branch
db = bb-delete-branch
p = push --force-with-lease
pd = !git pull && git bd
wip = !git add . && git commit -m '[ci skip] wip' --no-verify
rc = rebase --continue
cp = cherry-pick
wdiff = diff --color-words=.

[merge]
conflictstyle = diff3

[advice]
detachedHead = false
