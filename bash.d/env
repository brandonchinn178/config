#!/bin/bash

function _add_to_path() {
    export PATH="$PATH:$1"
}

function _prepend_to_path() {
    export PATH="$1:$PATH"
}

# my custom scripts
_add_to_path ~/.bin

export EDITOR=vim

# ls
export CLICOLOR=xterm-color
function _get_ls_colors() {
    # https://www.norbauer.com/rails-consulting/notes/ls-colors-and-terminal-app.html
    local LS_COLOR_DEFS=(
        Ex # directory
        Gx # symbolic link
        Gx # socket
        Dx # pipe
        Cx # executable
        Eg # block device
        Ed # character device
        xb # executable with setuid set
        xg # executable with setguid set
        xc # directory writable by others, with sticky bit
        xd # directory writable by others, without sticky bit
    )

    local IFS=''
    echo "${LS_COLOR_DEFS[*]}"
}
export LSCOLORS=$(_get_ls_colors)

# jq

export JQ_COLORS='1;33'

# aws
if [[ -f ~/.aws/credentials ]]; then
    $(export_aws)
fi

export IGNOREEOF=2
